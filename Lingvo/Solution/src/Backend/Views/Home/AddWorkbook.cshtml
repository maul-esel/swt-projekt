@{
    var workbook = (Workbook)ViewData["Workbook"];
}
<div class="container container-fluid">
    <div class="lingvo-header">
        <h3><a asp-controller="Home" asp-action="Index">Arbeitshefte</a> > @ViewData["Title"]</h3>
    </div>
    <form style="padding-top: 40px">
        <div class="form-group">
            <label for="workbook-title-name">Titel</label>
            <input class="form-control input-lg" id="workbook-title-name" placeholder="z.B. Thannhauser Band 1" value="@workbook?.Title">
        </div>
        <div class="form-group">
            <label for="workbook-subtitle">Untertitel</label>
            <input class="form-control input-lg" id="workbook-subtitle" placeholder="z.B. Deutschkurs für Geflüchtete" value="@workbook?.Subtitle">
        </div>
        <div class="form-group" style="text-align: center">
            <a class="btn btn-lg btn-danger" style="border:none" asp-controller="Home" asp-action="Index">Abbrechen</a>
            <button type="submit" class="btn-lg btn-success" style="border:none">Arbeitsheft anlegen</button>
        </div>
    </form>
</div>