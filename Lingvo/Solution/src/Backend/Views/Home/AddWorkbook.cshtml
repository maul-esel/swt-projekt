@model WorkbookModel

<div class="container container-fluid">
    <div class="lingvo-header">
        <h3><a asp-controller="Home" asp-action="Index">Arbeitshefte</a> > @ViewData["Title"]</h3>
    </div>
    <form asp-controller="Home" asp-action="@(Model == null ? "CreateWorkbook" : "UpdateWorkbook")" method="post" style="padding-top: 40px">
        <input type="hidden" name="id" value="@Model.Workbook?.Id"/>
        <div class="form-group">
            <label for="workbook-title-name">Titel</label>
            <input name="title" class="form-control input-lg" id="workbook-title-name" placeholder="z.B. Thannhauser Band 1" value="@Model.Workbook?.Title">
        </div>
        <div class="form-group">
            <label for="workbook-subtitle">Untertitel</label>
            <input name="subtitle" class="form-control input-lg" id="workbook-subtitle" placeholder="z.B. Deutschkurs für Geflüchtete" value="@Model.Workbook?.Subtitle">
        </div>
        <div class="form-group" style="text-align: center">
            <a class="btn btn-lg btn-danger" style="border:none" asp-controller="Home" asp-action="Index">Abbrechen</a>
            <button type="submit" class="btn-lg btn-success" style="border:none">Speichern</button>
        </div>
    </form>
</div>