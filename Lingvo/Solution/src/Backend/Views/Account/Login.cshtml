<div class="container container-fluid">
    <div class="lingvo-header container-fluid">
        <h3>Anmeldung zum Lingvo Redaktionssystem</h3>
    </div>
    <form style="padding-top:20px;" asp-controller="Account" asp-action="Login" method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="username">Benutzername:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="username" autofocus="autofocus" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="password">Passwort:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="password" />
            </div>
        </div>
        <div class="form-group" style="text-align: center">
            <input type="submit" class="btn-lg btn-success" style="border:none" value="Anmelden" />
        </div>
    </form>
    <div asp-validation-summary="All"></div>
</div>