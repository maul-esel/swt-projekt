@model CreateUserModel
<!DOCTYPE html>
<html lang="en">
    <head></head>
    <body>
        <div class="container container-fluid">
            <div class="lingvo-header container-fluid">
                <h3>Neuen Nutzer anlegen</h3>
            </div>
            <form style="padding-top:20px;" method="post">
                <div class="form-group row">
                    <label asp-for="Username" class="col-sm-2 col-form-label">Benutzername:</label>
                    <div class="col-sm-10">
                        <input asp-for="Username" autofocus="autofocus" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-2 col-form-label">Passwort:</label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PasswordRepeat" class="col-sm-2 col-form-label">Passwort wiederholen:</label>
                    <div class="col-sm-10">
                        <input asp-for="PasswordRepeat" class="form-control" />
                        <span asp-validation-for="PasswordRepeat" class="text-danger" />
                    </div>
                </div>
                <div class="form-group" style="text-align: center">
                    <input type="submit" class="btn-lg btn-success" style="border:none" value="Speichern" />
                </div>
            </form>
            <div asp-validation-summary="ModelOnly" class="text-danger" />
        </div>
    </body>
</html>