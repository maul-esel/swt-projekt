<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileApp"
             x:Class="MobileApp.MainPage">

    <Entry
      x:Name="firstEntry"
      Entry.Placeholder="Erste Ganzzahl"
    />   
  
   <Entry
      x:Name="secondEntry"
      Entry.Placeholder="Zweite Ganzzahl"
    />
    <Button
      HorizontalOptions="Left"
      x:Name="buttonAdd"
      Text="+"
      />
    <Button
      HorizontalOptions="Right"
      x:Name="buttonMult"
      Text="*"
      />
  <Entry
      x:Name="resultEntry"
      Entry.Placeholder="Ergebnis"
    />

</ContentPage>